#include "ataraxia.dtsi"
#include <input/processors.dtsi>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/input_transform.h>
#include <zephyr/dt-bindings/input/input-event-codes.h>


/* More about input processors: https://zmk.dev/docs/keymaps/input-processors#input-processors-overview */


sr: &pro_micro_spi {
    compatible = "nordic,nrf-spim";
    pinctrl-0 = <&pro_micro_spi_default>;
    pinctrl-1 = <&pro_micro_spi_sleep>;
    pinctrl-names = "default", "sleep";
	status = "okay";
	cs-gpios = <&pro_micro 5 GPIO_ACTIVE_LOW>;

	shifter: 595@0 {
		compatible = "zmk,gpio-595";
		status = "okay";
		gpio-controller;
		spi-max-frequency = <200000>;
		reg = <0>;
		#gpio-cells = <2>;
		ngpios = <8>;
	};
};

&pinctrl {
    pro_micro_spi_default: pro_mirco_spi_default {
        group1 {
            psels = <NRF_PSEL(SPIM_SCK, 1, 00)>,
                    <NRF_PSEL(SPIM_MOSI, 0, 22)>;
        };
    };

    pro_micro_spi_sleep: pro_micro_spi_sleep {
        group1 {
			psels = <NRF_PSEL(SPIM_SCK, 1, 00)>,
					<NRF_PSEL(SPIM_MOSI, 0, 22)>;
			low-power-enable;
        };
    };
};


/ {
    kscan0: kscan {
        compatible = "zmk,kscan-gpio-matrix";
        diode-direction = "col2row";
        wakeup-source;
        col-gpios
            = <&shifter 7 (GPIO_ACTIVE_LOW)> // COL0
            , <&shifter 6 (GPIO_ACTIVE_LOW)> // COL1
            , <&shifter 5 (GPIO_ACTIVE_LOW)> // COL2
            , <&shifter 4 (GPIO_ACTIVE_LOW)> // COL3
            , <&shifter 3 (GPIO_ACTIVE_LOW)> // COL4
            , <&shifter 2 (GPIO_ACTIVE_LOW)> // COL5
            , <&pro_micro 21 (GPIO_ACTIVE_LOW)> // COL6
            , <&shifter 15 (GPIO_ACTIVE_LOW)> // COL7
            , <&pro_micro 10 (GPIO_ACTIVE_LOW)> // COL8
            , <&pro_micro 16 (GPIO_ACTIVE_LOW)> // COL9
            , <&pro_micro 15 (GPIO_ACTIVE_LOW)> // COL10
            , <&pro_micro 14 (GPIO_ACTIVE_LOW)> // COL11
            ;
        row-gpios
            = <&pro_micro 20 (GPIO_ACTIVE_LOW | GPIO_PULL_UP)> // ROW0
            , <&pro_micro 19 (GPIO_ACTIVE_LOW | GPIO_PULL_UP)> // ROW1
            , <&pro_micro 18 (GPIO_ACTIVE_LOW | GPIO_PULL_UP)> // ROW2
            , <&shifter 1 (GPIO_ACTIVE_LOW | GPIO_PULL_UP)> // ROW3
            ;
    };
};
